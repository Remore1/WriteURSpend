<Page x:Class="WriteUrSpend.IncomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WriteUrSpend"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IncomePage" Loaded="Page_Loaded">

    <Grid Background="White">
        
        <StackPanel Width="400" Height="250">
            <TextBlock Foreground="Red" MaxHeight="200" MaxWidth="200" Text="Расскажите о вашем доходе " Margin="5" Height="23" Width="160"  />
            <TextBox x:Name="NameBuy" BorderBrush="Red" Text="от кого поступило?" Width="148"/>
            <ComboBox x:Name="CategoryIncome" Margin="5"  BorderBrush="Red" Width="172" Height="20"/>

            <ComboBox x:Name="TypeIncome" Margin="5" Text="TypeIncome" BorderBrush="Red" Width="173">
            </ComboBox>
            <TextBox x:Name="Sum" Margin="5" Text="Sum" BorderBrush="Red" Width="173"/>

            <Button Name="SaveOperation" Content="Сохранить"></Button>
        </StackPanel>
    </Grid>
</Page>
    
